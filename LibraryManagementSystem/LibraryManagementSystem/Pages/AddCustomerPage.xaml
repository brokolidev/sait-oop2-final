<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LibraryManagementSystem.Pages.AddCustomerPage"
             Title="AddCustomerPage">
    <ScrollView>
        <HorizontalStackLayout>

            <!-- Side Menu -->
            <VerticalStackLayout WidthRequest="250" BackgroundColor="#070F2B" Spacing="10">

                <!-- Logo -->
                <Label 
    HeightRequest="100" WidthRequest="250"
    FontSize="Header" TextColor="White"
    VerticalTextAlignment="Center"
    HorizontalTextAlignment="Center">Logo</Label>

                <Button BackgroundColor="#1B1A55"
                        WidthRequest="200"
                        Text="Home"
                        Clicked="HomeButton_Clicked" />

                <Button BackgroundColor="#1B1A55"
                        WidthRequest="200"
                        x:Name="RentalButton"
                        Text="Rental" />

                <Button BackgroundColor="#1B1A55"
                        WidthRequest="200"
                        x:Name="CustomerButton"
                        Text="Manage Customer" />

                <Button BackgroundColor="#1B1A55"
                        x:Name="InventoryButton"
                        WidthRequest="200"
                        Text="Manage Inventory" />

                <Button BackgroundColor="#1B1A55"
                        x:Name="SystemButton"
                        WidthRequest="200"
                        Text="Mange System" />

            </VerticalStackLayout>

            <VerticalStackLayout Padding="20" WidthRequest="1000" Spacing="10">

                <StackLayout Padding="10">
                    <Label Text="Add Customer" FontAttributes="Bold" HorizontalOptions="Start" Padding="10" />
                    <Entry x:Name="userType" Placeholder="User Type" Margin="0,0,0,10" />
                    <Entry x:Name="firstName" Placeholder="First Name" Margin="0,0,0,10" />
                    <Entry x:Name="lastName" Placeholder="Last Name" Margin="0,0,0,10"/>
                    <Entry x:Name="email" Placeholder="Email" Margin="0,0,0,10" />
                    <Entry x:Name="phoneNumber" Placeholder="Phone Number" Margin="0,0,0,10" />
                    <Button Text="Add Customer" WidthRequest="200" />
                </StackLayout>
            </VerticalStackLayout>
        </HorizontalStackLayout>
    </ScrollView>

</ContentPage>
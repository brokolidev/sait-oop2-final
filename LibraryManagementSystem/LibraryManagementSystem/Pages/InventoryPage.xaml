<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LibraryManagementSystem.Pages.InventoryPage"
             Title="InventoryPage">

    <ScrollView>
        <HorizontalStackLayout>

            <!-- Side Menu -->
            <VerticalStackLayout WidthRequest="250" BackgroundColor="#070F2B" Spacing="10">

                <!-- Logo -->
                <Label 
                    HeightRequest="100" WidthRequest="250"
                    FontSize="Header" TextColor="White"
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Center">Logo</Label>

                <Button BackgroundColor="#1B1A55"
                    WidthRequest="200"
                    Text="Home" 
                    Clicked="HomeButton_Clicked"/>

                <Button BackgroundColor="#1B1A55"
                    WidthRequest="200"
                    Text="Rental" />

                <Button BackgroundColor="#1B1A55"
                    WidthRequest="200"
                    Text="Manage Customer" />

                <Button BackgroundColor="#1B1A55"
                    WidthRequest="200"
                    Text="Manage Inventory" />
                
        
                <Button BackgroundColor="#1B1A55"
                    WidthRequest="200"
                    Text="Mange System" />

            </VerticalStackLayout>

            <VerticalStackLayout Padding="20" WidthRequest="1000" Spacing="10">

                <Label FontSize="20">Manage Inventory Page</Label>
                <Label FontSize="Title" HorizontalTextAlignment="Center">Inventory Checker</Label>
                <HorizontalStackLayout Spacing="15">
                    <VerticalStackLayout Spacing="10">
                        <Label>Category</Label>
                        <Picker WidthRequest="200" BackgroundColor="LightGray"></Picker>
                    </VerticalStackLayout>
                    <VerticalStackLayout Spacing="10" WidthRequest="200">
                        <Label>Title</Label>
                        <SearchBar Placeholder="Title"></SearchBar>
                    </VerticalStackLayout>
                    <VerticalStackLayout Spacing="10" WidthRequest="200">
                        <Label>Publish Year</Label>
                        <SearchBar Placeholder="Year"></SearchBar>
                    </VerticalStackLayout>
                    <Button Text="Check Inventory" WidthRequest="200" HeightRequest="20" Margin="30"></Button>
                </HorizontalStackLayout>
                <Label FontSize="Title" HorizontalTextAlignment="Center">Inventory List</Label>
                <HorizontalStackLayout>
                    <ListView>
                        <ListView.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Book 1 - The Mountainâ€™s Shadow by L.J. Whitsitt - Category: Fiction, Published: 2018</x:String>
                                <x:String>Book 2 - Data Science Fundamentals by A. Smith - Category: Education, Published: 2021</x:String>
                                <x:String>Book 3 - The Art of Cooking by E. B. Chef - Category: Culinary, Published: 2015</x:String>
                                <!-- Add more items as needed -->
                            </x:Array>
                        </ListView.ItemsSource>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextCell Text="{Binding .}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                </HorizontalStackLayout>
            </VerticalStackLayout>

        </HorizontalStackLayout>
    </ScrollView>

</ContentPage>
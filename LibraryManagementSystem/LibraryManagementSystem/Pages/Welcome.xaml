<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LibraryManagementSystem.Pages.Welcome"
             xmlns:controls="clr-namespace:LibraryManagementSystem.Pages.Controls"
             Title="Welcome">
    <ScrollView>
        <HorizontalStackLayout>

            <controls:Nav x:Name="NavControl" />

            <VerticalStackLayout Padding="20">

                <Label FontSize="Header">Welcome to SAIT Library</Label>
                <!-- bind Welcome message property to this label -->
                <Label FontSize="Body" x:Name="WelcomMessageLabel"></Label>

                <Button Text="Logout" Clicked="LogoutButton_Clicked" Margin="0, 15, 0, 0" BackgroundColor="DarkRed" />

            </VerticalStackLayout>

        </HorizontalStackLayout>
    </ScrollView>
</ContentPage>